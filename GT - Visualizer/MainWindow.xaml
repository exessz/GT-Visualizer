<Window x:Class="GT___Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GT___Visualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="DrawingCanvas" Background="#1A0505"/>
        <Button Content="⊙"
                Width="50"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,10,10"
                Background="#330000"
                Foreground="#FF3333"
                BorderBrush="Red"
                BorderThickness="2"
                FontFamily="Consolas"
                FontSize="24"
                FontWeight="DemiBold"
                Click="OpenTuner"></Button>

        <Button Content="⚙"
                Width="50"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Background="#330000"
                Foreground="#FF3333"
                BorderBrush="Red"
                BorderThickness="2"
                FontFamily="Consolas"
                FontSize="16"
                FontWeight="DemiBold"
                Click="OpenSettings"></Button>
    </Grid>
</Window>
